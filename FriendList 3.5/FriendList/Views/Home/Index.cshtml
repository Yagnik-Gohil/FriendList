@using Microsoft.AspNetCore.Http
@{
    ViewData["Title"] = "Home Page";
}
@{

    var userId = Context.Session.GetString("userId");
}
<div class="text-center">
    <h1 class="display-4">Welcome to Friend List</h1>
</div>
<div class="text-center">

    @if (userId == null)
    {
        <a class="btn btn-primary" asp-controller="Account" asp-action="Login">Login</a> <a class="btn btn-success" asp-controller="Account" asp-action="SignUp">SignUp</a>
    }
    else
    {
        <a class="btn btn-primary" asp-controller="FriendList" asp-action="SearchFriends">Search Friends</a>
        <a class="btn btn-success" asp-controller="FriendList" asp-action="MyFriends">My Friends</a>
        <a class="btn btn-info" asp-controller="FriendList" asp-action="FriendRequest">Friend Requests</a>
    }

</div>